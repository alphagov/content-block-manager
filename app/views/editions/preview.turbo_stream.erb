<%= turbo_stream.replace "edition_#{@edition.id}" do %>
  <%= render "preview", edition: @edition %>
<% end %>

<%= turbo_stream.replace "preview_link_#{@edition.id}" do %>
  <% if @edition.has_multiple_subschema_entries? %>
    <%= render "shared/reorder_link", edition: @edition %>
  <% end %>

  <%= render("govuk_publishing_components/components/button", {
    text: "Close preview",
    secondary_quiet: true,
    href: request.referer,
    margin_bottom: false,
    data_attributes: {
      turbo: true,
    },
  }) %>
<% end %>
