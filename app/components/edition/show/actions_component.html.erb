<ul class="actions govuk-list govuk-!-text-align-centre">
  <% if state == "draft_complete" %>
    <li>
      <%= render Shared::TransitionButtonComponent.new(
        edition: edition,
        transition: :ready_for_review,
      ) %>
    </li>
  <% end %>

  <% if state == "awaiting_review" %>
    <li class="govuk-!-static-margin-bottom-3">
      <%= render "govuk_publishing_components/components/button", {
        text: I18n.t("show_action.send_to_factcheck"),
        href: new_review_outcome_edition_path(edition),
        inline_layout: false,
      } %>
    </li>
  <% end %>

  <% if state == "awaiting_factcheck" %>
    <li class="govuk-!-static-margin-bottom-3">
      <%= render "govuk_publishing_components/components/button", {
        text: edition.is_scheduling? ? I18n.t("show_action.schedule_block") : I18n.t("show_action.publish_block"),
        href: new_factcheck_outcome_edition_path(edition),
        inline_layout: false,
      } %>
    </li>
  <% end %>

  <% if !finalised_state? %>
    <li class="govuk-!-static-margin-bottom-3">
      <%= render "govuk_publishing_components/components/button", {
        text: draft? ? I18n.t("show_action.complete_draft") : I18n.t("show_action.edit_block_type", block_type: document.block_type),
        href: workflow_path(edition, step: :edit_draft),
        secondary_solid: draft? ? false : true,
        inline_layout: false,
      } %>
    </li>
  <% end %>

  <% if finalised_state? %>
    <li>
      <%= render "govuk_publishing_components/components/button", {
        text: has_more_recent_draft? ? I18n.t("show_action.edit_latest_edition") : I18n.t("show_action.edit_block_type", block_type: document.block_type.humanize.downcase),
        href: has_more_recent_draft? ? workflow_path(id: document.most_recent_edition.id, step: :edit_draft) : new_document_edition_path(document),
        secondary_solid: true,
        inline_layout: false,
      } %>
    </li>
  <% end %>

  <% if state != "published" && document.has_published_edition? %>
    <li class="govuk-!-static-margin-top-3">
      <%= link_to(I18n.t("show_action.go_to_published_edition"), published_edition_document_path(document), class: "govuk-link") %>
    </li>
  <% end %>

  <% if state == "published" && has_more_recent_draft? %>
    <li class="govuk-!-static-margin-top-3">
      <%= link_to(I18n.t("show_action.return_to_latest_edition"), document_path(document), class: "govuk-link") %>
    </li>
  <% end %>

  <% if edition.is_deletable? %>
    <li class="govuk-!-static-margin-top-3">
      <%= link_to I18n.t("buttons.delete_draft"), delete_edition_path(edition), class: "govuk-link govuk-link--no-visited-state gem-link--destructive" %>
    </li>
  <% end %>
</ul>
